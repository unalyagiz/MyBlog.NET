@model MyBlog.Models.AdminPostViewModel.AdminPostViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AdminView</title>
</head>
<body>

    <br />
   
    <div class="row justify-content-between">
        <div class="col-2">
            <h2>
                Posts
            </h2>
        </div>
        <div class="col-2">
            @Html.ActionLink("Add Post", "AddPost", "Admin", null, new { @class = "btn btn-info" })
        </div>

    </div>

  
    <br />


    @foreach (var post in Model.Posts)
    {

        <div class="card mb-4">
            <img class="card-img-top" src="@Url.Content("~/images/"+post.ImgUrl)" alt="Card image cap">
            <div class="card-body">
                <h2 class="card-title">@post.Title</h2>
                <p class="card-text">@Html.Raw(post.Description)</p>
                    
            </div>
            <div class="card-footer text-muted">
                Posted @post.PublishDate by @post.Admin.Username
               
            </div>
        </div>


    }



</body>
</html>
